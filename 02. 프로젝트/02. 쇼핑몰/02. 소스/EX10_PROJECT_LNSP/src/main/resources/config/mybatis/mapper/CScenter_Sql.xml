<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="managecscenter">
	
	<!-- MAPPING : /change_faq.do -->
	<!-- faq idx=? -->
	<select id="faq_selectone" parameterType="java.lang.Integer" resultType="faq">
		SELECT * FROM faq WHERE idx = #{idx}
	</select>
	<!-- faq update -->
	<update id="faq_update" parameterType="faq">
		UPDATE faq SET question = #{question} , answer = #{answer} WHERE idx = #{idx} 	
	</update> 
	
	<!-- MAPPING : /cscenter_insert_action.do -->
	<!-- faq 글 추가 -->
	<insert id="faq_insert" parameterType="faq">
		INSERT INTO faq VALUES(
			seq_faq_idx.nextVal,
			#{category},
			#{question},
			#{answer},
			#{ip},
			sysdate,
			0,
			0
		)
	</insert>
</mapper>